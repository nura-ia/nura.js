{
  "name": "@nura/svelte",
  "version": "0.1.0",
  "description": "Svelte adapter for Nura.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nura-ia/nurajs.git",
    "directory": "packages/svelte"
  },
  "homepage": "https://github.com/nura-ia/nurajs/tree/main/packages/svelte",
  "bugs": {
    "url": "https://github.com/nura-ia/nurajs/issues"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "copy:components": "node ./scripts/copy-components.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "nura",
    "svelte",
    "actions",
    "stores"
  ],
  "peerDependencies": {
    "svelte": ">=4"
  },
  "dependencies": {
    "@nura/core": "workspace:*",
    "@nura/dom": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "svelte": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Nura Dev Team"
}
